{
  "openapi": "3.0.0",
  "info": {
      "version": "1.0",
      "title": "SmartCosmeticsBackend API",
      "license": {
          "name": "MIT"
      }
  },
  "servers": [
      {
          "url": "https://mobile.smartcosmetics.com/v1"
      }
  ],
  "paths": {
      "/scan": {
          "post": {
              "summary": "Send binary data of jpeg image for scanning",
              "requestBody": {
                  "content": {
                      "application/octet-stream": {
                          "schema": {
                              "type": "string",
                              "format": "binary"
                          }
                      }
                  }
              },
              "responses": {
                  "200": {
                      "description": "Results of scanning and recognition",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/responses/ScanResponse"
                              }
                          }
                      }
                  }
              }
          }
      }
  },
  "components": {
      "examples": {
          "Product-example":{
          "summary":"example of a product",
          "value":{
              "uuid": "123e4567-e89b-12d3-a456-426655440000",
              "title": "The best Lipstick",
              "type": "lipstick",
              "about": "Descriptipon of product",
              "price": 300,
              "expiry_date": 1587476654,
              "scanning_date": 1587476654,
              "alarm_date": 1587476654,
              "image": "https://pngimage.net/wp-content/uploads/2018/05/face-png.png"
          }
          },
          "Ingredient-example": {
            "summary":"example of ingredient",
            "value":{
              "title": "AQUA/WATER",
              "about": "Simple H2O which you can find anywhere in this world",
              "hazard": 0
            }
          }
      },
      "responses": {
          "ScanResponse": {
              "description": "Response for uploaded image for scaning purpose",
              "content": {
                  "application/json": {
                      "schema": {
                          "$ref": "#/components/schemas/ScanResponse"
                      }
                  }
              }
          }
      },
      "schemas": {
          "ScanResponse": {
              "type": "object",
              "properties": {
                  "product_info": {
                      "$ref": "#/components/schemas/Product"
                  },
                  "ingredients_list": {
                      "$ref": "#/components/schemas/Ingredient"
                  }
              },
              "example": {
                  "product_info": {
                      "$ref": "#/components/examples/Product-example"
                  },
                  "ingredients_list": {
                      "$ref": "#/components/examples/Ingredient-example"
                  }
              }
          },
          "Product": {
              "type": "object",
              "required": [
                  "uuid"
              ],
              "properties": {
                  "uuid": {
                      "type": "string"
                  },
                  "title": {
                      "type": "string"
                  },
                  "type": {
                      "type": "string"
                  },
                  "about": {
                      "type": "string"
                  },
                  "price": {
                      "type": "integer"
                  },
                  "expiry_date": {
                      "type": "integer"
                  },
                  "scanning_date": {
                      "type": "integer"
                  },
                  "alarm_date": {
                      "type": "integer"
                  },
                  "image": {
                      "type": "string"
                  }
              },
              "example": {
                  "$ref": "#/components/examples/Product-example"
              }
          },
          "Ingredient": {
              "type": "object",
              "properties": {
                  "title": {
                      "type": "string"
                  },
                  "about": {
                      "type": "string"
                  },
                  "hazard_level": {
                      "type": "integer"
                  }
              },
              "example": {
                  "title": "AQUA/WATER",
                  "about": "Simple H2O which you can find anywhere in this world",
                  "hazard": 0
              }
          }
      }
  }
}